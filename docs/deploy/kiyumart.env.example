# Example `kiyumart.env` file for systemd or environment file usage (DO NOT COMMIT THIS FILE)
# Copy this to /etc/kiyumart/kiyumart.env or place in /etc/environment
# and update values before deploying

DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@db-host:5432/kiyumart
NODE_ENV=production
PORT=5000
SESSION_SECRET=replace_with_32_plus_char_random_string
JWT_SECRET=replace_with_32_plus_char_random_string
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# Administrator credentials (only for initial seeding/testing; remove/change in production)
SUPER_ADMIN_EMAIL=superadmin@kiyumart.com
SUPER_ADMIN_PASSWORD=SuperStrongPasswordHere
